#RewriteCond %{REQUEST_FILENAME} !-f
#RewriteRule ^uploads\/([^\/]+)\/(([^.]+).(jpg|png))$ inc/thumb.php?src=/uploads/$1/$2&category=$1 [L,QSA]
#RewriteCond %{REQUEST_FILENAME} !-f
#RewriteRule ^([^\/]+)/([^\/]+)/(.+).(jpg)(.*)$ inc/thumb.php?src=/uploads/good/$1/$3.$4$5&wh=$2&category=good&good_link=$1&file_name=$3.$4 [QSA]

RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^(.*)/([x_0-9\-]+)/(.*)$ inc/thumb.php?src=/$1/$3&wh=$2 [QSA]

#редирект для каталога
RewriteRule ^([\w_\/-]+)$ index.php?$1 [L,QSA]
