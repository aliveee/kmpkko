RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^(.*)/([x_0-9\-]+)/(.*)$ inc/thumb.php?src=/$1/$3&wh=$2 [QSA]

#редирект для каталога
RewriteRule ^([\w_\/-]+)$ index.php?$1 [L,QSA]
